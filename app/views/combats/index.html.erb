<p id="notice"><%= notice %></p>

<h1>Combats</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Fight</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @combats.each do |combat| %>
      <tr>
        <td><%= combat.id %></td>
        <td><%= combat.name %></td>
        <td><%= combat.fight %></td>
        <td><%= combat.user %></td>
        <td><%= link_to 'Show', combat %></td>
        <td><%= link_to 'Edit', edit_combat_path(combat) %></td>
        <td><%= link_to 'Destroy', combat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

